@model IEnumerable<weatherescu_test_2.Models.City>

<h2 class="text-center">Cities & Temperature</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>City</th>
            <th>Country</th>
            <th>Temperature (°C)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Name</td>
                <td>@city.Country</td>
                <td>@(city.Temperature?.Value ?? 0) °C</td>
            </tr>
        }
    </tbody>
</table>
